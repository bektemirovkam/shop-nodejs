<div class="login">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a class="active" href="#login">Войти</a></li>
                <li class="tab col s6"><a href="#register">Регистрация</a></li>
            </ul>
        </div>
        <div id="login" class="col s6 offset-s3">
            <div class="row">
                <form method="POST" action="/auth/login" novalidate>
                    <h2 class="center-align">Войти в магазин</h2>
                    <p class="center-align auth-error">{{loginError}}</p>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="email" type="email" name="email" class="validate" required autocomplete="off">
                            <label for="email">Email</label>
                            <span class="helper-text" data-error="Введите email"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="password" type="password" name="password" class="validate" required
                                autocomplete="off">
                            <label for="password">Пароль</label>
                            <span class="helper-text" data-error="Введите пароль"></span>
                        </div>
                    </div>
                    <input type="hidden" name="_csrf" value="{{csrf}}">
                    <button type="submit" class="btn btn-primary">Войти</button>
                    <p>
                        <a href="/auth/reset">Забыли пароль?</a>
                    </p>
                </form>
            </div>
        </div>
        <div id="register" class="col s6 offset-s3">
            <div class="row">
                <form method="POST" action="/auth/register" novalidate>
                    <h2 class="center-align">Регистрация</h2>
                    <p class="center-align auth-error">{{registerError}}</p>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="remail" type="email" name="email" class="validate" required autocomplete="off">
                            <label for="remail">Email</label>
                            <span class="helper-text" data-error="Введите email"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="rpassword" type="password" name="password" class="validate" required
                                autocomplete="off">
                            <label for="rpassword">Пароль</label>
                            <span class="helper-text" data-error="Введите пароль"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="confirm" type="password" name="confirm" class="validate" required
                                autocomplete="off">
                            <label for="confirm">Повторите пароль</label>
                            <span class="helper-text" data-error="Введите пароль еще раз"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="name" type="text" name="name" class="validate" required autocomplete="off">
                            <label for="name">Введите имя</label>
                            <span class="helper-text" data-error="Введите имя"></span>
                        </div>
                    </div>
                    <input type="hidden" name="_csrf" value="{{csrf}}">
                    <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
                </form>
            </div>
        </div>
    </div>
</div>