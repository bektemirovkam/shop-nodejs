<div class="login">
    <div class="row">
        <div class="col s6 offset-s3">
            <div class="row">
                <form method="POST" action="/auth/reset" novalidate>
                    <h2 class="center-align">Забыли пароль?</h2>
                    <p class="center-align auth-error">{{error}}</p>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="email" type="email" name="email" class="validate" required autocomplete="off">
                            <label for="email">Email</label>
                            <span class="helper-text" data-error="Введите email"></span>
                        </div>
                    </div>
                    <input type="hidden" name="_csrf" value="{{csrf}}">
                    <button type="submit" class="btn btn-primary">Сбросить пароль</button>
                </form>
            </div>
        </div>
    </div>
</div>